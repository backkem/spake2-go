modules = ["golang"]

[nix]
channel = "stable-24_05"
packages = ["go"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "run_example"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "run_tests"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "run_rfc_tests"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "run_parsed_vector_test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "isolated_parser_test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "run_rfc_point_test"

[[workflows.workflow]]
name = "run_example"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && go run ./spake2/example/main.go"

[[workflows.workflow]]
name = "run_tests"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && go test ./spake2 -v"

[[workflows.workflow]]
name = "run_rfc_tests"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && go test ./spake2 -run TestRFCVectors -v"

[[workflows.workflow]]
name = "run_parsed_vector_test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && go test ./spake2 -run TestParsedRFCVector -v"

[[workflows.workflow]]
name = "run_rfc_point_test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && go test ./spake2 -run TestRFCPointCalculations -v"

[deployment]
run = ["sh", "-c", "cd /home/runner && go run basic_spake2.go"]
